<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="default">

    <DefaultFaultRule name="DefaultFaultRule">
        <Step>
            <Name>RaiseFault.Plain</Name>
            <Condition>(request.header.accept = null) or ((request.header.accept != "application/json") and (request.header.accept != "application/xml"))</Condition>
        </Step>
        <Step>
            <Name>RaiseFault.JSON</Name>
            <Condition>(request.header.accept = "application/json")</Condition>
        </Step>
        <Step>
            <Name>RaiseFault.XML</Name>
            <Condition>(request.header.accept = "application/xml")</Condition>
        </Step>
        <AlwaysEnforce>true</AlwaysEnforce>
    </DefaultFaultRule>

    <FaultRules>
        <FaultRule name="EnhanceWrongApiKeyError">
            <Step>
                <Name>AssignMessage.EnhanceMissingApiKeyError</Name>
            </Step>
            <Condition>(fault.name = "FailedToResolveAPIKey")</Condition>
        </FaultRule>
    </FaultRules>

    <PreFlow>
        <Request>
            <Step>
                <Name>RaiseFault.MissingAcceptHeader</Name>
                <Condition>request.header.accept = null</Condition>
            </Step>
            <Step>
                <Name>RaiseFault.WrongAcceptHeader</Name>
                <Condition>(request.header.accept != "application/json") and (request.header.accept != "application/xml")
                </Condition>
            </Step>
        </Request>
    </PreFlow>

    <Flows>
        <Flow name="DemoFlow">
            <Request>
                <Step>
                    <Name>RaiseFault.Unauthorized</Name>
                    <Condition>(request.queryparam.scenario != null) and (request.queryparam.scenario = "unauthorized")</Condition>
                </Step>
                <Step>
                    <Name>VerifyApiKey</Name>
                    <Condition>(request.queryparam.scenario != null) and (request.queryparam.scenario = "wrongkey")
                    </Condition>
                </Step>
                <Step>
                    <Name>AssignMessage.DummyResponse.JSON</Name>
                    <Condition>(request.header.accept = "application/json")</Condition>
                </Step>
                <Step>
                    <Name>AssignMessage.DummyResponse.XML</Name>
                    <Condition>(request.header.accept = "application/xml")</Condition>
                </Step>
                <Step>
                    <Name>RaiseFault.Forbidden</Name>
                    <Condition>(request.queryparam.scenario != null) and (request.queryparam.scenario = "forbidden")</Condition>
                </Step>
            </Request>
            <Condition>(proxy.pathsuffix MatchesPath "/news") and (request.verb = "GET")</Condition>
        </Flow>
    </Flows>

    <HTTPProxyConnection>
        <BasePath>/apigee-errorhandling</BasePath>
        <Properties/>
        <VirtualHost>default</VirtualHost>
    </HTTPProxyConnection>

    <RouteRule name="preflight">
        <Condition>request.verb == "OPTIONS"</Condition>
    </RouteRule>
    <RouteRule name="default"/>
</ProxyEndpoint>