            <Name>flow.api.error.code</Name>
            <Value>403</Value>
        </AssignVariable>
        <AssignVariable>
            <Name>flow.api.error.reason</Name>
            <Value>Forbidden</Value>
        </AssignVariable>
        <AssignVariable>
            <Name>flow.api.error.info</Name>
            <Value>https://[tbd]</Value>
        </AssignVariable>
        <AssignVariable>
            <Name>flow.api.error.status</Name>
            <Value>403</Value>
        </AssignVariable>
        <AssignVariable>
            <Name>flow.api.error.message</Name>
            <Value>You receive a 'forbidden' error because you set the scenario query parameter to the respective value</Value>
