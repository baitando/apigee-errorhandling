<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<RaiseFault async="false" continueOnError="false" enabled="true" name="RaiseFault.Unauthorized">
    <DisplayName>RaiseFault.Unauthorized</DisplayName>

    <FaultResponse>
        <Set>
            <StatusCode>401</StatusCode>
            <ReasonPhrase>Unauthorized</ReasonPhrase>
        </Set>
        <AssignVariable>
            <Name>custom.error.detail</Name>
            <Value>You receive an 'unauthorized' error because you set the scenario query parameter to the respective value.</Value>
        </AssignVariable>
    </FaultResponse>
</RaiseFault>