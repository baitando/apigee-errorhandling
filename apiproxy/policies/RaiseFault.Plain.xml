<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<RaiseFault async="false" continueOnError="false" enabled="true" name="RaiseFault.Plain">
    <DisplayName>RaiseFault.Plain</DisplayName>
    <FaultRules/>
    <Properties/>
    <FaultResponse>
        <Set>
            <Headers>
                <Header name="Content-Type">text/plain</Header>
            </Headers>
            <Payload contentType="text/plain" variablePrefix="@" variableSuffix="#">@flow.api.error.message#</Payload>
            <StatusCode>{flow.api.error.code}</StatusCode>
            <ReasonPhrase>{flow.api.error.reason}</ReasonPhrase>
        </Set>
    </FaultResponse>
    <IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
</RaiseFault>